<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
  </head>
  <body>
    <h1>
      <p>Dizimo Situação</p>
    </h1>
    <table border="1">
      <tr>
        <th>Mês Pago</th>
        <th>Valor</th>
        <th>Forma de Pagamento</th>
        <th>Pessoa Vinculada <a href="/dizimo/novo">Cadastar</a></th>
      </tr>
      <% dados.forEach(function(dizimo){ %>
      <tr>
        <td><%= dizimo.meses %></td>
        <td><%= dizimo.valor %></td>
        <td><%= dizimo.tipoPagamento %></td>
        <td><%= dizimo.pessoaId ? dizimo.pessoa.nome : ''%></td>

        <a href="dizimo/<%= dizimo.id  %>">
          <button>Editar</button>
        </a>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
