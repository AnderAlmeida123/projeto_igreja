<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Cadastro de Pessoa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
  </head>
  <body>
    <h1>
      <p>Cadastro de Pessoa</p>
    </h1>
    <div>
      <form action="/pessoa" method="POST">
        <input type="hidden" name="id" value="<%= id %>" />
        
        <label for="nome">Nome</label>
        <input name="nome" value="<%= nome %>" />

        <label for="cpf">Cpf</label>
        <input name="cpf" value="<%= cpf %>" />
        
        <label for="dataNascimento">Data</label>
        <input name="dataNascimento" value="<%= dataNascimento %>" type="date" /> 
        
        <label for="sexo">Sexo</label>
        <input name="sexo" value="<%= sexo %>" />
        
        <label for="comunidadeId">Comunidade Pertencente</label>
        <select name="comunidadeId">
          <option>Selecione</option>
          <% comunidades.forEach(function(comunidade){ %>
          <option value="<%= comunidade.id %>" <%= comunidade.id === comunidadeId ? 'selected' : '' %>>
            <%= comunidade.nomeComunidade %>
        </option>
        <% }) %>
    </select>
        
        <button type="submit">Salvar</button>
      </form>
    </div>
  </body>
</html>
