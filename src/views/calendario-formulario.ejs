<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
  </head>
  <body>
    <h1>
      <p>calendario</p>
    </h1>
    <div>
      <form action="/calendario" method="POST">
        <input type="hidden" name="id" value="<%= id %>" />

        <label for="dataHora">Data e Hora do Evento</label>
        <input name="dataHora" value="<%= dataHora %>" type="datetime-local" />
        <br />

        <label for="tituloEvento">Titulo do Evento</label>
        <input name="tituloEvento" value="<%= tituloEvento %>" />
        <br />
        <label for="descricao">Descrição</label>
        <input name="descricao" value="<%= descricao %>" />
        <br />
        <label for="comunidadeId">Comunidade</label>
        <select name="comunidadeId">
          <option>Selecione</option>
          <% comunidades.forEach(function(comunidade){ %>
          <option value="<%= comunidade.id %>" <%= comunidade.id === comunidadeId ? 'selected' : '' %>>
            <%= comunidade.nomeComunidade %>
        </option>
        <% }) %>
    </select>

        <br />
        <label for="tipoEventoId">Tipo do evento </label>
        <select name="tipoEventoId">
          <option>Selecione</option>
          <% tiposEvento.forEach(function(tipoEvento){ %>
          <option value="<%= tipoEvento.id %>" <%= tipoEvento.id === tipoEventoId ? 'selected' : '' %>>
            <%= tipoEvento.tipoEvento %>
        </option>
          <% }) %>
          
        </select>
        <br />
        <button type="submit">Salvar</button>
      </form>
    </div>
  </body>
</html>
