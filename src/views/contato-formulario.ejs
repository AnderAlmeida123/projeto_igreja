<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
  </head>
  <body>
    <h1>
      <p>Contato Pessoal</p>
    </h1>
    <div>
      <form action="/contato" method="POST">
        <input type="hidden" name="id" value="<%= id %>" />

        <label for="Celular">Numero do Celular</label>
        <input name="celular" value="<%= celular %>" />

        <label for="telContato">Telefone de Contato</label>
        <input name="telContato" value="<%= telContato %>" />

        <label for="email">Email</label>
        <input name="email" value="<%= email %>" />

        <label for="pessoaId">Pessoa Relacionada</label>
        <select name="pessoaId">
          <option>Selecione</option>
          <% pessoas.forEach(function(pessoa){ %>
          <option value="<%= pessoa.id %>" <%= pessoa.id === pessoaId ? 'selected' : '' %>>
            <%= pessoa.nome %>
        </option>
          <% }) %>
        </select>

        <button type="submit">Salvar</button>
      </form>
    </div>
  </body>
</html>
