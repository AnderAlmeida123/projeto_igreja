<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
  </head>
  <body>
    <h1>
      <p>Comunidades Cadastradas:</p>
    </h1>
    <table border="1">
      <tr>
        <th>Nome da Comunidade</th>
        <th>Bairro</th>
        <th>Responsavel sobre a Comunidade</th>
        <th>Ações<a href="/comunidade/novo">Cadastrar</a></th>
      </tr>

      <% dados.forEach(function(comunidade){ %>
      <tr>
        <td><%= comunidade.nomeComunidade %></td>
        <td><%= comunidade.bairro %></td>
        <td>
          <%= comunidade.responsavelId ? comunidade.responsavel.nome : '' %>
        </td>
        <td>
          <a href="/comunidade/<%= comunidade.id %>">
            <button>Editar</button>
          </a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
